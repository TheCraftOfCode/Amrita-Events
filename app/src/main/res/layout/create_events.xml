<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/parentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/email_text">

            <TextView
                android:layout_weight="2."
                android:id="@+id/head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:text="Create Event"
                android:textColor="@color/white"
                android:textSize="40sp" />

            <ImageButton
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_clear_24"
                android:layout_weight="1"/>

        </LinearLayout>

        <EditText
            android:id="@+id/ImageUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_text"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/editable_box_shape"
            android:drawablePadding="5dp"
            android:hint="Enter ImageURL"
            android:textColorHint="@color/white"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />


        <EditText
            android:drawablePadding="5dp"
            android:id="@+id/Title"
            android:padding="12dp"
            android:layout_below="@+id/ImageUrl"
            android:hint="Enter Title"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textColorHint="@color/white"
            android:background="@drawable/editable_box_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <EditText
            android:drawablePadding="5dp"
            android:layout_marginTop="20dp"
            android:id="@+id/Caption"
            android:padding="12dp"
            android:layout_below="@+id/Title"
            android:hint="Enter Caption"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textColorHint="@color/white"
            android:background="@drawable/editable_box_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:drawablePadding="5dp"
            android:layout_marginTop="20dp"
            android:id="@+id/Description"
            android:padding="12dp"
            android:layout_below="@+id/Caption"
            android:hint="Enter Description"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            android:background="@drawable/editable_box_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:drawablePadding="5dp"
            android:layout_marginTop="20dp"
            android:id="@+id/OrganisingClub"
            android:padding="12dp"
            android:layout_below="@+id/Description"
            android:hint="Enter Organising Club"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            android:background="@drawable/editable_box_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:drawablePadding="5dp"
            android:layout_marginTop="20dp"
            android:id="@+id/Date"
            android:padding="12dp"
            android:layout_below="@+id/OrganisingClub"
            android:hint="Enter Date"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            android:background="@drawable/editable_box_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:drawablePadding="5dp"
            android:layout_marginTop="20dp"
            android:id="@+id/Venue"
            android:padding="12dp"
            android:layout_below="@+id/Date"
            android:hint="Enter Venue"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            android:background="@drawable/editable_box_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/RegistrationLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Venue"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/editable_box_shape"
            android:drawablePadding="5dp"
            android:hint="Enter Registration Link"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="18sp" />

        <EditText
            android:drawablePadding="5dp"
            android:layout_marginTop="20dp"
            android:id="@+id/Note"
            android:padding="12dp"
            android:layout_below="@+id/RegistrationLink"
            android:hint="Enter Note"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            android:background="@drawable/editable_box_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ContactDetailsSection"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/Note"
            android:textColor="@color/white"
            android:text="Contact Details:"
            android:textSize="25sp" />

        <EditText
            android:drawablePadding="5dp"
            android:layout_marginTop="20dp"
            android:id="@+id/ContactDetailName1"
            android:padding="12dp"
            android:layout_below="@+id/ContactDetailsSection"
            android:hint="Enter Contact Name"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            android:background="@drawable/editable_box_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:drawablePadding="5dp"
            android:layout_marginTop="20dp"
            android:id="@+id/ContactPhone1"
            android:padding="12dp"
            android:layout_below="@+id/ContactDetailName1"
            android:hint="Enter Mobile No"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            android:background="@drawable/editable_box_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:drawablePadding="5dp"
            android:layout_marginTop="20dp"
            android:id="@+id/ContactDetailName2"
            android:padding="12dp"
            android:layout_below="@+id/ContactPhone1"
            android:hint="Enter Contact Name"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            android:background="@drawable/editable_box_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:drawablePadding="5dp"
            android:layout_marginTop="20dp"
            android:id="@+id/ContactPhone2"
            android:padding="12dp"
            android:layout_below="@+id/ContactDetailName2"
            android:hint="Enter Mobile No"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            android:background="@drawable/editable_box_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/CreateEventButton"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/ContactPhone2"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:text="Create Event"
            android:background="@drawable/image_shadow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />

    </RelativeLayout>


</ScrollView>