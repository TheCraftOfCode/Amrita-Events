<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/email_text">

            <TextView
                android:layout_weight="2."
                android:id="@+id/head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Create Event"
                android:textColor="@color/black"
                android:textSize="40sp" />

            <ImageButton
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_clear_24"
                android:layout_weight="1"/>
        </LinearLayout>
        <EditText
            android:id="@+id/ImageUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_text"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/editable_box_shape"
            android:drawablePadding="5dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:hint="Enter ImageUrl"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />


        <EditText
            android:drawablePadding="5dp"
            android:id="@+id/Title"
            android:padding="12dp"
            android:layout_below="@+id/ImageUrl"
            android:hint="Enter Title"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:background="@drawable/editable_box_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <EditText
            android:drawablePadding="5dp"
            android:layout_marginTop="20dp"
            android:id="@+id/Caption"
            android:padding="12dp"
            android:layout_below="@+id/Title"
            android:hint="Enter Caption"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:background="@drawable/editable_box_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:drawablePadding="5dp"
            android:layout_marginTop="20dp"
            android:id="@+id/Description"
            android:padding="12dp"
            android:layout_below="@+id/Caption"
            android:hint="Enter Description"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:background="@drawable/editable_box_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:drawablePadding="5dp"
            android:layout_marginTop="20dp"
            android:id="@+id/OrganisingClub"
            android:padding="12dp"
            android:layout_below="@+id/Description"
            android:hint="Enter Organising Club"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:background="@drawable/editable_box_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:drawablePadding="5dp"
            android:layout_marginTop="20dp"
            android:id="@+id/Date"
            android:padding="12dp"
            android:layout_below="@+id/OrganisingClub"
            android:hint="Enter Date"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:background="@drawable/editable_box_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:drawablePadding="5dp"
            android:layout_marginTop="20dp"
            android:id="@+id/Venue"
            android:padding="12dp"
            android:layout_below="@+id/Date"
            android:hint="Enter Venue"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:background="@drawable/editable_box_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:drawablePadding="5dp"
            android:layout_marginTop="20dp"
            android:id="@+id/RegistrationLink"
            android:padding="12dp"
            android:layout_below="@+id/Venue"
            android:hint="Enter Registration Link"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:background="@drawable/editable_box_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:drawablePadding="5dp"
            android:layout_marginTop="20dp"
            android:id="@+id/Note"
            android:padding="12dp"
            android:layout_below="@+id/RegistrationLink"
            android:hint="Enter Note"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:background="@drawable/editable_box_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:drawablePadding="5dp"
            android:layout_marginTop="20dp"
            android:id="@+id/ContactDetail1"
            android:padding="12dp"
            android:layout_below="@+id/Note"
            android:hint="Enter Contact Detail 1"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:background="@drawable/editable_box_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:drawablePadding="5dp"
            android:layout_marginTop="20dp"
            android:id="@+id/ContactDetail2"
            android:padding="12dp"
            android:layout_below="@+id/ContactDetail1"
            android:hint="Enter Contact Detail 2"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:background="@drawable/editable_box_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/login_button"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/ContactDetail2"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:text="Create Event"
            android:backgroundTint="@color/colorBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />



    </RelativeLayout>
</ScrollView>